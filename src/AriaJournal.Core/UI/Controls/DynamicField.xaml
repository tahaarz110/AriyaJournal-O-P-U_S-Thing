<!-- توضیح: کنترل فیلد داینامیک برای رندر از Schema -->
<!-- ═══════════════════════════════════════════════════════════════════════ -->

<UserControl x:Class="AriaJournal.Core.UI.Controls.DynamicField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="Root"
             FlowDirection="RightToLeft">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,5"
                    Visibility="{Binding ShowLabel, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding LabelText, ElementName=Root}"
                       FontWeight="SemiBold"/>
            <TextBlock Text=" *" 
                       Foreground="Red"
                       Visibility="{Binding IsRequired, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Field Content -->
        <ContentPresenter Grid.Row="1" 
                          Content="{Binding FieldContent, ElementName=Root}"/>

        <!-- Validation Error -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage, ElementName=Root}"
                   Foreground="#D32F2F"
                   FontSize="11"
                   Margin="0,3,0,0"
                   Visibility="{Binding HasError, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>

